{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": [
			"frontend/**/*",
			"backend/**/*",
			"!node_modules",
			"!.next",
			"!dist",
			"!build"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"formatWithErrors": true,
		"lineWidth": 80
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"level": "error",
					"fix": "safe"
				},
				"noUnusedVariables": {
					"level": "warn",
					"fix": "none"
				}
			},
			"suspicious": {
				"noUnknownAtRules": "off",
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useSemanticElements": "off",
				"useKeyWithClickEvents": "off"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "off",
					"fix": "safe",
					"options": {
						"attributes": ["className"],
						"functions": ["cn", "clsx", "cva", "tw", "tw.*"]
					}
				}
			}
		},
		"domains": {
			"next": "recommended",
			"react": "recommended"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		},
		"formatter": {
			"enabled": true,
			"indentStyle": "space",
			"indentWidth": 2,
			"lineWidth": 80,
			"quoteStyle": "double"
		},
		"linter": {
			"enabled": true
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["react", "react-dom", "react/**"],
							":BLANK_LINE:",
							["next", "next/**"],
							":BLANK_LINE:",
							":PACKAGE:",
							":BLANK_LINE:",
							[":ALIAS:", "@/**", "~/**"],
							":BLANK_LINE:",
							":PATH:"
						]
					}
				}
			}
		}
	}
}
